{
  "name": "@elsikora/pluralizer",
  "version": "1.0.0",
  "description": "A library for pluralizing words in different languages",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm run prebuild && rollup -c",
    "test:all": "npm run test:unit && npm run test:e2e",
    "test:e2e": "npm run build && vitest --config vitest.config.e2e.ts --typecheck.tsconfig tsconfig.json",
    "test:unit": "vitest run test/unit --config vitest.config.unit.ts"
  },
  "homepage": "https://github.com/ElsiKora/Pluralizer#readme",
  "bugs": {
    "url": "https://github.com/ElsiKora/Pluralizer/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ElsiKora/Pluralizer"
  },
  "type": "module",
  "keywords": [
    "pluralize",
    "pluralization",
    "english",
    "russian",
    "i18n"
  ],
  "author": "ElsiKora",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.1.2",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "eslint": "^9.22.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.35.0",
    "tslib": "^2.8.1",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  }
}
